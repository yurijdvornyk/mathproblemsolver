<Window x:Class="ProblemSolverApp.Windows.WorkspaceEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prop="clr-namespace:ProblemSolverApp.Properties"
        xmlns:conv="clr-namespace:ProblemSolverApp.Converters"
        xmlns:local="clr-namespace:ProblemSolverApp.Windows"
        mc:Ignorable="d" MinWidth="320" MinHeight="240"
        WindowStartupLocation="CenterScreen"
        Title="Workspace editor" Height="480" Width="800">
    <Window.Resources>
        <conv:ColorToBrushConverter x:Key="ColorConverter" />
    </Window.Resources>
    <Grid Background="{Binding Source={x:Static prop:Settings.Default}, Path=MainBackground, Converter={StaticResource ColorConverter}}">
        <DockPanel LastChildFill="True">
            <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                <TextBlock Text="Workspace path:" Margin="5,5,0,5"/>
                <Button Content="..." DockPanel.Dock="Right" Margin="0,5,5,5" Width="24" Click="btnSetWorkspacePath_Click"/>
                <TextBox Name="tbWorkspacePath" Text="{Binding Path=CurrentWorkspace.WorkspacePath, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="5" IsReadOnly="True"/>
            </DockPanel>
            <Separator DockPanel.Dock="Top" Margin="5,0,5,0"/>
            <DockPanel DockPanel.Dock="Top">
                <TextBlock DockPanel.Dock="Top" Text="Name:" Margin="5,0,5,0"/>
                <TextBox Name="tbName"  Text="Type name" Margin="5,0,5,0" PreviewTextInput="tbName_PreviewTextInput" TextChanged="tbName_TextChanged"/>
            </DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
                <Button Content="OK" Margin="5" Width="70"/>
                <Button Content="Cancel" Margin="5" Width="70" Click="btnClose_Click"/>
            </StackPanel>
            <Separator DockPanel.Dock="Bottom" Margin="5,0,5,0"/>
            <Grid DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0">
                    <TextBlock DockPanel.Dock="Top" Text="Description:" Margin="5,5,5,0"/>
                    <TextBox Name="tbDescription" Text="Type description" Margin="5,0,5,0" TextWrapping="WrapWithOverflow" VerticalScrollBarVisibility="Auto"/>
                </DockPanel>
                <Separator DockPanel.Dock="Top" Margin="5,5,5,0" Grid.Row="1"/>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0" LastChildFill="True">
                        <TextBlock DockPanel.Dock="Top" Text="Problems:" Margin="5,0,5,0"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
                            <Button Content="Add" Margin="5" Width="60" Click="btnAddProblem_Click"/>
                            <Button Content="Remove" Margin="0,5,5,5" Width="60" Click="btnRemoveProblem_Click"/>
                        </StackPanel>
                        <ListBox Name="lbProblems" Margin="5,0,5,0"/>
                    </DockPanel>
                    <DockPanel Grid.Column="1" LastChildFill="True">
                        <TextBlock DockPanel.Dock="Top" Text="Shared Libraries:" Margin="5,0,5,0"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
                            <Button Content="Add" Margin="5" Width="60"/>
                            <Button Content="Remove" Margin="0,5,5,5" Width="60"/>
                        </StackPanel>
                        <ListBox Name="lbSharedLibraries" Margin="5,0,5,0"/>
                    </DockPanel>
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
